{
  "name": "userscripts",
  "version": "1.0.0",
  "type": "module",
  "description": "Collection of userscripts for Hacker News and HackerWeb",
  "scripts": {
    "build": "pnpm build:hackerweb-collapse && pnpm build:hn-links",
    "build:hackerweb-collapse": "vite build -c vite/hackerweb-collapse.config.ts",
    "build:hn-links": "vite build -c vite/hn-links.config.ts",
    "build:watch": "concurrently \"pnpm build:watch:hackerweb-collapse\" \"pnpm build:watch:hn-links\"",
    "build:watch:hackerweb-collapse": "vite build -c vite/hackerweb-collapse.config.ts --watch",
    "build:watch:hn-links": "vite build -c vite/hn-links.config.ts --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "userscript",
    "hackernews",
    "hackerweb"
  ],
  "author": "Steve Whittaker <swhitt@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "@vitest/ui": "^4.0.16",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vite-plugin-monkey": "^7.1.8",
    "vitest": "^4.0.16"
  }
}
