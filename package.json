{
  "name": "userscripts",
  "version": "1.0.0",
  "type": "module",
  "description": "Collection of userscripts for Hacker News and HackerWeb",
  "scripts": {
    "build": "bun run build:hackerweb-collapse && bun run build:hn-links",
    "build:hackerweb-collapse": "vite build -c vite/hackerweb-collapse.config.ts",
    "build:hn-links": "vite build -c vite/hn-links.config.ts",
    "build:watch": "concurrently \"bun run build:watch:hackerweb-collapse\" \"bun run build:watch:hn-links\"",
    "build:watch:hackerweb-collapse": "vite build -c vite/hackerweb-collapse.config.ts --watch",
    "build:watch:hn-links": "vite build -c vite/hn-links.config.ts --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "userscript",
    "hackernews",
    "hackerweb"
  ],
  "author": "Steve Whittaker <swhitt@gmail.com>",
  "license": "MIT",
  "engines": {
    "bun": ">=1.3.8"
  },
  "packageManager": "bun@1.3.8",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.1.0",
    "@vitejs/plugin-basic-ssl": "^2.1.4",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.2.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-monkey": "^7.1.9",
    "vitest": "^4.0.18"
  }
}
